@page "/my-invoices"
@attribute [Authorize(Roles = "Client")]
@inject IInvoiceService InvoiceService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@inject IJSRuntime JS

<PageTitle>SAVORA - Mes Factures</PageTitle>

<PageHeader Title="Mes Factures" Subtitle="Consultez vos factures d'intervention" Icon="file-text" />

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-6 col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h5 class="card-title">Total</h5>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-primary">
                            <i data-feather="file-text"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@_invoices.Count</h1>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h5 class="card-title">Total payé</h5>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-success">
                            <i data-feather="dollar-sign"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@_totalAmount.ToString("N0")</h1>
                <small class="text-muted">TND</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h5 class="card-title">Payantes</h5>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-info">
                            <i data-feather="credit-card"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@_paidCount</h1>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h5 class="card-title">Gratuites</h5>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-warning">
                            <i data-feather="gift"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@_freeCount</h1>
            </div>
        </div>
    </div>
</div>

<!-- Data Table -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Liste des factures</h5>
    </div>
    @if (_isLoading)
    {
        <div class="card-body text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
        </div>
    }
    else if (_invoices.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover my-0">
                <thead>
                    <tr>
                        <th>Numéro</th>
                        <th>Date</th>
                        <th class="d-none d-md-table-cell">Intervention</th>
                        <th>Type</th>
                        <th class="d-none d-lg-table-cell">Pièces</th>
                        <th class="d-none d-lg-table-cell">M.O.</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in _invoices)
                    {
                        <tr>
                            <td><code>@invoice.InvoiceNumber</code></td>
                            <td>@invoice.CreatedAt.ToString("dd/MM/yy")</td>
                            <td class="d-none d-md-table-cell">
                                <a href="/interventions/@invoice.InterventionId">@invoice.ReclamationTitle</a>
                            </td>
                            <td>
                                @if (invoice.IsFree)
                                {
                                    <span class="badge bg-success">Gratuite</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">Payante</span>
                                }
                            </td>
                            <td class="d-none d-lg-table-cell">
                                @(invoice.IsFree ? "-" : invoice.PartsTotal.ToString("N2"))
                            </td>
                            <td class="d-none d-lg-table-cell">
                                @(invoice.IsFree ? "-" : invoice.LaborTotal.ToString("N2"))
                            </td>
                            <td>
                                @if (invoice.IsFree)
                                {
                                    <span class="text-muted">-</span>
                                }
                                else
                                {
                                    <strong>@invoice.TotalAmount.ToString("N2") TND</strong>
                                }
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary me-1" @onclick="@(() => ViewInvoice(invoice.Id))" title="Voir">
                                    <i data-feather="eye"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" @onclick="@(() => DownloadPdf(invoice.Id))" title="PDF">
                                    <i data-feather="file-text"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="card-body empty-state">
            <i data-feather="file-text" style="width: 64px; height: 64px; color: #CBD5E1;"></i>
            <h5 class="mt-3">Aucune facture</h5>
            <p>Vous n'avez aucune facture pour le moment.</p>
        </div>
    }
</div>

@code {
    private List<InvoiceListDto> _invoices = new();
    private bool _isLoading = true;
    private decimal _totalAmount;
    private int _paidCount;
    private int _freeCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadInvoices();
    }

    private async Task LoadInvoices()
    {
        _isLoading = true;
        try
        {
            var result = await InvoiceService.GetMyInvoicesAsync(1, 100);
            if (result.Success && result.Data != null)
            {
                _invoices = result.Data.Items;
                CalculateStats();
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erreur: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void CalculateStats()
    {
        _totalAmount = _invoices.Where(i => !i.IsFree).Sum(i => i.TotalAmount);
        _paidCount = _invoices.Count(i => !i.IsFree);
        _freeCount = _invoices.Count(i => i.IsFree);
    }

    private void ViewInvoice(Guid id)
    {
        Navigation.NavigateTo($"/invoices/{id}");
    }

    private async Task DownloadPdf(Guid id)
    {
        try
        {
            var result = await InvoiceService.GetPdfAsync(id);
            if (result.Success && result.Data != null)
            {
                await JS.InvokeVoidAsync("downloadFile", Convert.ToBase64String(result.Data), $"invoice-{id}.pdf", "application/pdf");
                Snackbar.Add("Téléchargement démarré", Severity.Success);
            }
            else
            {
                Snackbar.Add("PDF non disponible", Severity.Warning);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erreur: {ex.Message}", Severity.Error);
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JS.InvokeVoidAsync("initFeatherIcons");
    }
}


