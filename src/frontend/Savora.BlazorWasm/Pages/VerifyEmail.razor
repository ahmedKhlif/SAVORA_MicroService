@page "/verify-email"
@layout EmptyLayout
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime

<PageTitle>SAVORA - Vérification Email</PageTitle>

<div class="main d-flex justify-content-center w-100 auth-page">
    <main class="content d-flex p-0">
        <div class="container d-flex flex-column">
            <div class="row vh-100">
                <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto d-table h-100">
                    <div class="d-table-cell align-middle">
                        
                        <div class="text-center mt-4 mb-4">
                            <img src="img/logo.png" alt="SAVORA" height="60" class="mb-3" />
                        </div>

                        <div class="card shadow-lg">
                            <div class="card-body text-center py-5">
                                @if (_isLoading)
                                {
                                    <div class="spinner-border text-primary mb-4" role="status" style="width: 3rem; height: 3rem;">
                                        <span class="visually-hidden">Vérification...</span>
                                    </div>
                                    <h4>Vérification en cours...</h4>
                                    <p class="text-muted">Veuillez patienter</p>
                                }
                                else if (_verificationSuccess)
                                {
                                    <div class="mb-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="#10B981" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                                        </svg>
                                    </div>
                                    <h3 class="text-success mb-3">Email vérifié!</h3>
                                    <p class="text-muted mb-4">
                                        Votre compte a été activé avec succès.<br/>
                                        Bienvenue sur SAVORA!
                                    </p>
                                    <a href="/login" class="btn btn-primary btn-lg">
                                        <i class="align-middle me-1" data-feather="log-in"></i>
                                        Se connecter
                                    </a>
                                }
                                else
                                {
                                    <div class="mb-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="#EF4444" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                                        </svg>
                                    </div>
                                    <h3 class="text-danger mb-3">Vérification échouée</h3>
                                    <p class="text-muted mb-4">
                                        @_errorMessage
                                    </p>
                                    <div class="d-grid gap-2">
                                        <button type="button" class="btn btn-primary" @onclick="ResendEmail" disabled="@_resendLoading">
                                            @if (_resendLoading)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            Renvoyer l'email de vérification
                                        </button>
                                        <a href="/login" class="btn btn-outline-secondary">
                                            Retour à la connexion
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? Token { get; set; }

    private bool _isLoading = true;
    private bool _verificationSuccess = false;
    private bool _resendLoading = false;
    private string? _errorMessage;
    private string? _email;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrEmpty(Token))
        {
            _isLoading = false;
            _errorMessage = "Token de vérification manquant.";
            return;
        }

        await VerifyEmailAsync();
    }

    private async Task VerifyEmailAsync()
    {
        try
        {
            var result = await AuthService.VerifyEmailAsync(Token!);
            
            if (result.Success)
            {
                _verificationSuccess = true;
                Snackbar.Add("Email vérifié avec succès!", Severity.Success);
            }
            else
            {
                _errorMessage = result.Message ?? "Le lien de vérification est invalide ou a expiré.";
            }
        }
        catch (Exception)
        {
            _errorMessage = "Une erreur s'est produite lors de la vérification.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JSRuntime.InvokeVoidAsync("initFeatherIcons");
    }

    private async Task ResendEmail()
    {
        // Prompt for email
        _email = await JSRuntime.InvokeAsync<string>("prompt", "Entrez votre adresse email:");
        
        if (string.IsNullOrEmpty(_email))
            return;

        _resendLoading = true;
        try
        {
            var result = await AuthService.ResendVerificationEmailAsync(_email);
            Snackbar.Add("Un nouveau lien de vérification a été envoyé à votre email.", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erreur: {ex.Message}", Severity.Error);
        }
        finally
        {
            _resendLoading = false;
        }
    }
}

