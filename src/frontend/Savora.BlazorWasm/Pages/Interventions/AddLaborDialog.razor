@inject IInterventionService InterventionService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="_description" Label="Description (optionnel)" Variant="Variant.Outlined"
                      FullWidth="true" Class="mb-3" />

        <MudNumericField @bind-Value="_hours" Label="Heures" Variant="Variant.Outlined"
                         FullWidth="true" Class="mb-3" Min="0.5m" Step="0.5m" Format="N1" />

        <MudNumericField @bind-Value="_hourlyRate" Label="Taux horaire (TND)" Variant="Variant.Outlined"
                         FullWidth="true" Min="0" Format="N2" />

        <MudAlert Severity="Severity.Info" Dense="true" Class="mt-3">
            Total: @((_hours * _hourlyRate).ToString("N2")) TND
        </MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Annuler</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" 
                   Disabled="@(_isLoading || _hours <= 0)">
            @if (_isLoading)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            Ajouter
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Guid InterventionId { get; set; }

    private string _description = "";
    private decimal _hours = 1;
    private decimal _hourlyRate = 50;
    private bool _isLoading = false;

    private async Task Submit()
    {
        if (_hours <= 0) return;

        _isLoading = true;
        try
        {
            var result = await InterventionService.AddLaborAsync(InterventionId, new AddLaborRequest
            {
                Description = _description,
                Hours = _hours,
                HourlyRate = _hourlyRate
            });
            
            if (result.Success && result.Data != null)
            {
                // Return the updated intervention data so the parent can update immediately
                MudDialog.Close(DialogResult.Ok(result.Data));
            }
            else
            {
                Snackbar.Add(result.Message ?? "Erreur lors de l'ajout de la main d'Å“uvre", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erreur: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();
}

